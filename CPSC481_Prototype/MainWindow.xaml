                                                                             Command="{Binding Section_Selected}"
                                                                             IsEnabled="{Binding Selectable}"
                                                                             GroupName="{Binding DataContext.ID, RelativeSource={RelativeSource AncestorType=ItemsControl}, StringFormat='LEC{0}'}">
                                                                </RadioButton>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                                <Expander IsExpanded="True">
