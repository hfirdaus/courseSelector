                                        <StackPanel>
                                            <TextBlock Margin="3, 0" FontWeight="Medium" Text="Junior Non-Commerce Option" TextDecorations="Underline"/>
                                            <TextBlock Margin="3, 0" Text="(6 units or 1.0 full-course equivalent)"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Expander>
