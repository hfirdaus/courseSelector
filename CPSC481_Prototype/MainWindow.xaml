                                <StackPanel>
                                    <Border Margin="0" BorderThickness="0 1 0 1" BorderBrush="Black" Background="AliceBlue">
                                        <StackPanel Orientation="Vertical">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Margin="3, 0" FontWeight="Bold" VerticalAlignment="Center" Text="ECON 201 - Principles of Microeconomics" TextDecorations="Underline"/>
                                                <Button Click="Remove_From_Cart" Margin="5, 0" Content="Remove" FontWeight="Bold"/>
                                            </StackPanel>
                                            <TextBlock Margin="3, 0" Text="Fall 2017"/>
                                            <TextBlock Margin="3, 0" Text="L01 - Prof - TR - [time]"/>
                                            <TextBlock  Margin="3, 0" Text="T03 - TBA - MW - [time]"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Margin="0,3" BorderThickness="0 1 0 1" BorderBrush="Black" Background="AliceBlue">
