                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Margin="3, 0" FontWeight="Bold" VerticalAlignment="Center" Text="MGST 217 - Introduction to Business Analytics" TextDecorations="Underline"/>
                                                <Button Click="Remove_From_Cart" Margin="5, 0" Content="Remove" FontWeight="Bold"/>
                                            </StackPanel>
                                            <TextBlock Margin="3, 0" Text="Fall 2017"/>
                                            <TextBlock Margin="3, 0" Text="L02 - Prof - MWF - [time]"/>
                                            <TextBlock  Margin="3, 0" Text="T01 - TBA - MW - [time]"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                                <Button Click="Enroll" Margin="4" Content="Enroll into Course(s)" FontWeight="Bold" MaxWidth="150" />
                            </StackPanel>
                            
                            <StackPanel Name="Sched_Stack_Panel" MinHeight="150" Visibility="Collapsed" Background="PaleGreen">
                                <StackPanel>
                                    <Border Margin="0" BorderThickness="0 1 0 1" BorderBrush="Black" Background="AliceBlue">
                                        <StackPanel Orientation="Vertical">
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox Margin="3, 3"/>
                                                <TextBlock Margin="3, 0" FontWeight="Bold" VerticalAlignment="Center" Text="SGMA 217 - Introduction to Business Skills" TextDecorations="Underline"/>
                                            </StackPanel>
                                            <TextBlock Margin="3, 0" Text="Fall 2017"/>
                                            <TextBlock Margin="3, 0" Text="L01 - Prof - MWF - [time]"/>
                                            <TextBlock  Margin="3, 0" Text="T05 - TBA - TR - [time]"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                                <Button Click="DeleteCourse" Margin="4" Content="Delete Selected Course(s) from Schedule" FontWeight="Bold" MaxWidth="250"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <Grid>
                    <ScrollViewer>
