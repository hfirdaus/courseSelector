<Window x:Class="CPSC481_Prototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC481_Prototype"
        mc:Ignorable="d"
        Title="Improved Course Registration" Height="600" Width="830" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
    <Grid>


        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>

            <DockPanel LastChildFill="True" Grid.Column="0">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top" DockPanel.Dock="Top">
                    <Border BorderBrush="Black"
                        BorderThickness="0 0 0 1">
                        <!-- Border thickness order: "left top right bottom"-->
                        <StackPanel>
                            <Label HorizontalAlignment="Left" DockPanel.Dock="Left" Content="Degree Navigator" FontWeight="Bold" FontSize="14"/>
                            <StackPanel Orientation="Horizontal"
                                Margin="2">
                                <Border CornerRadius="100" BorderBrush="Black" BorderThickness="1"
                                MinWidth="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                                MinHeight="{Binding ActualWidth, RelativeSource={RelativeSource Self}}">
                                    <Label Content="1" HorizontalAlignment="Center"/>
                                </Border>
                                <Label HorizontalAlignment="Left" Content="Business..."/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                Margin="2">
                                <Border CornerRadius="100" BorderBrush="Black" BorderThickness="1"
                                MinWidth="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                                MinHeight="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                                        MouseDown="Add_Degree_MouseDown">
                                    <Label Content="+" HorizontalAlignment="Center"/>
                                </Border>
                                <Label HorizontalAlignment="Left" Content="View additional degree"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <CheckBox Checked="Show_Complete_CheckBox_Checked" Unchecked="Show_Complete_CheckBox_Unchecked" VerticalAlignment="Center"/>
                                <Label Content="Show Completed Required Course(s)"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>
                <DockPanel LastChildFill="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" DockPanel.Dock="Top">

                    <ScrollViewer x:Name="Show_Completed_Stack_Panel" DockPanel.Dock="Bottom" Visibility="Collapsed" MinHeight="150" Background="LightYellow">
                        <StackPanel>
                            <TextBlock Text="Completed Required Courses" FontSize="15" FontWeight="Bold" TextAlignment="Center"/>
                            <Border Margin="0,3" BorderThickness="1" BorderBrush="Black" Background="White">
                                <StackPanel>
                                    <TextBlock Text="ENGL 201 - Approaches to Literature" TextDecorations="Underline" FontWeight="Medium" Margin="3, 0"/>
                                    <TextBlock TextWrapping="Wrap" Text="Requirement 2: Non-Commerce Courses (Junior English 3 units or 0.5 full course equivalent)" Margin="3, 0"/>
                                    <TextBlock Margin="3, 0" Text="Completed date: Spring 2017"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <ScrollViewer>
                        <StackPanel>

                            <Expander>
                                <Expander.Header>
                                    <TextBlock Text="Requirement 1: Commerce Courses" FontWeight="Bold"/>
                                </Expander.Header>

                                <StackPanel>
                                    <Border BorderThickness="1" BorderBrush="Black" Background="LightGreen">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <RadioButton GroupName ="r1" Margin="3, 3"/>
                                                <TextBlock Margin="3, 0" FontWeight="Medium" Text="MGST 217 - Introduction to Business Analytics" TextDecorations="Underline"/>
                                            </StackPanel>
                                            <TextBlock Margin="3, 0" Text="Availability: Fall 2017 | Winter 2018"/>
                                            <TextBlock TextWrapping="Wrap" Margin="3, 0" Text="Prerequisite: admission to the Haskayne Bachelor of Commerce program."/>
                                            <TextBlock Margin="3, 0" TextWrapping="Wrap" Text="Antirequisite: credit for MGST217 and BSEN291 will not be allowed."/>
                                        </StackPanel>
                                    </Border>

                                    <Border Margin="0,3" BorderThickness="1" BorderBrush="Black" Background="LightGreen">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <RadioButton GroupName ="r1" Margin="3, 3"/>
                                                <TextBlock Margin="3, 0" FontWeight="Medium" Text="SGMA 217 - Introduction to Business Skills" TextDecorations="Underline"/>
                                            </StackPanel>
                                            <TextBlock Margin="3, 0" Text="Availability: Fall 2017 | Winter 2018"/>
                                            <TextBlock TextWrapping="Wrap" Margin="3, 0" Text="Prerequisite: admission to the Haskayne Bachelor of Commerce program."/>
                                            <TextBlock Margin="3, 0" TextWrapping="Wrap" Text="Antirequisite: credit for SGMA217 and BSEN291 will not be allowed."/>
                                        </StackPanel>
                                    </Border>

                                </StackPanel>
                            </Expander>

                            <Expander Margin="0, 10">
                                <Expander.Header>
                                    <TextBlock Text="Requirement 2: Non-Commerce Courses" FontWeight="Bold"/>
                                </Expander.Header>

                                <StackPanel>
                                    <Border BorderThickness="1" BorderBrush="Black" Background="LightGreen">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <RadioButton GroupName ="r2" Margin="3, 3"/>
                                                <TextBlock Margin="3, 0" FontWeight="Medium" Text="ECON 201 - Principles of Microeconomic" TextDecorations="Underline"/>
                                            </StackPanel>

                                            <TextBlock Margin="3, 0" Text="Availability: Fall 2017 | Winter 2018"/>
                                            <TextBlock Margin="3, 0" Text="Prerequisite: None"/>
                                            <TextBlock Margin="3, 0" Text="Corequisite: None"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Margin="0,3" BorderThickness="1" BorderBrush="Black" Background="IndianRed">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <RadioButton GroupName ="r2" Margin="3, 3"/>
                                                <TextBlock Margin="3, 0" FontWeight="Medium" Text="ECON 203 - Principles of Marcoeconomic" TextDecorations="Underline"/>

                                            </StackPanel>
                                            <TextBlock Margin="3, 0" Text="Availability: Fall 2017 | Winter 2018"/>
                                            <TextBlock Margin="3, 0" Text="Prerequisite: ECON 201"/>
                                            <TextBlock Margin="3, 0" Text="Corequisite: ECON 201"/>
                                        </StackPanel>
                                    </Border>

                                </StackPanel>
                            </Expander>

                            <Expander DockPanel.Dock="Top">
                                <Expander.Header>
                                    <TextBlock Text="Requirement 3: Option Courses" FontWeight="Bold"/>
                                </Expander.Header>

                                <StackPanel>
                                    <Border Margin="0,3" BorderThickness="1" BorderBrush="Black" Background="LightSkyBlue">
                                        <StackPanel>
                                            <TextBlock Margin="3, 0" FontWeight="Medium" Text="Junior Humanities or Fine Arts Option" TextDecorations="Underline"/>
                                            <TextBlock Margin="3, 0" Text="(3 units or 0.5 full-course equivalent)"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Margin="0,3" BorderThickness="1" BorderBrush="Black" Background="LightSkyBlue">
                                        <StackPanel>
                                            <TextBlock Margin="3, 0" FontWeight="Medium" Text="Junior Science Option" TextDecorations="Underline"/>
                                            <TextBlock Margin="3, 0" Text="(3 units or 0.5 full-course equivalent)"/>
                                        </StackPanel>
                                    </Border>

