<Window x:Class="CPSC481_Prototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC481_Prototype"
        mc:Ignorable="d"
        Title="Improved Course Registration" Height="600" Width="830" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">

    <Window.Resources>
        <SolidColorBrush x:Key="color1">#C0B283</SolidColorBrush>
        <SolidColorBrush x:Key="color2">#DCD0C0</SolidColorBrush>
        <SolidColorBrush x:Key="color3">#F4F4F4</SolidColorBrush>
        <SolidColorBrush x:Key="color4">#BAA898</SolidColorBrush>
        <SolidColorBrush x:Key="color5">#E89790</SolidColorBrush>
        <!--Red - Needs Pre-Reqs-->
        <SolidColorBrush x:Key="color6">#98FB98</SolidColorBrush>
        <!--Green - Reached Pre-Reqs-->
        <SolidColorBrush x:Key="color7">#BFD7EA</SolidColorBrush>
        <!--Blue - Options-->
        <!--Green-->
    </Window.Resources>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>

            <DockPanel LastChildFill="True" Grid.Column="0">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top" DockPanel.Dock="Top">
                    <Border BorderBrush="Black"
                        BorderThickness="0 0 0 1">
                        <!-- Border thickness order: "left top right bottom"-->
                        <StackPanel Background="{DynamicResource color1}">
                            <StackPanel Background="#FFEED5AB">
                                <TextBlock HorizontalAlignment="Center" DockPanel.Dock="Left" Text="Degree Navigator" FontWeight="Bold" FontSize="24" TextDecorations="Underline" Margin="5,3,0,5"/>
                                <Label HorizontalAlignment="Center" Content="Bachalor of Commerce | Majoring in Commerce" Margin="3,0,0,0" FontSize="18" FontWeight="Medium"/>
                            </StackPanel>

                            <Border BorderThickness="1" BorderBrush="Black" Margin="0 0 0 5" Height="1"/>

                            <StackPanel Orientation="Horizontal"
                                Margin="2">
                                <Border Margin="5 0" CornerRadius="100" BorderBrush="Black" BorderThickness="2"
                                MinWidth="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                                MinHeight="{Binding ActualWidth, RelativeSource={RelativeSource Self}}" MouseDown="Current_Degree_MouseDown"  Background="#FFFFF29E">
                                    <Label Content="o" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" FontWeight="Bold" Margin="0 0 0 3"/>
                                </Border>
                                <Label HorizontalAlignment="Left" Content="View concentration for current degree" Margin="3,3,0,0" FontSize="15" FontStyle="Italic"/>
                            </StackPanel>

                            <Border BorderThickness="1" BorderBrush="Black" Margin="0 5 0 5" Height="1"/>
                            <StackPanel Orientation="Horizontal"
                                Margin="2">
                                <Border Margin="5 0" CornerRadius="100" BorderBrush="Black" BorderThickness="2"
                                MinWidth="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                                MinHeight="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                                        MouseDown="Add_Degree_MouseDown" Background="#FFFFF29E">
                                    <Label Content="+" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" Margin="0 0 0 3"/>
                                </Border>
                                <Label HorizontalAlignment="Left" Content="View additional degree (major and/or minor)" Margin="3,3,0,0" FontSize="15" FontStyle="Italic"/>
                            </StackPanel>

                            <Border BorderThickness="1" BorderBrush="Black" Margin="0 5 0 5" Height="1"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <CheckBox Margin="15 0 10 0" Checked="Show_Complete_CheckBox_Checked" Unchecked="Show_Complete_CheckBox_Unchecked" VerticalAlignment="Center"/>
                                <Label Content="Show Completed Required Course(s)" FontSize="15" FontStyle="Italic"/>
                            </StackPanel>

                            <Border BorderThickness="1" BorderBrush="Black" Margin="0 5 0 0" Height="1"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Label Content="Options for requirement tabs:" FontSize="15" FontStyle="Italic"/>

                                <Rectangle Width="1" Height="Auto" Fill="Black"/>
                                <Label Content="Expand All" FontSize="15" FontWeight="Medium" MouseDown="degreeNav_ExpandAll_MouseDown" Background="#FFF5EAA4"/>
                                <Rectangle Width="1" Height="Auto" Fill="Black"/>
                                <Label Content="Collapse All" FontSize="15" FontWeight="Medium" MouseDown="degreeNav_CollapseAll_MouseDown"  Background="#FFF5EAA4"/>
                                <Rectangle Width="1" Height="Auto" Fill="Black"/>
                                <Label Content="Remove All" FontSize="15" FontWeight="Medium" Background="#FFF5EAA4" MouseDown="RemoveAll_MouseDown"/>
                                <Rectangle Width="1" Height="Auto" Fill="Black"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <DockPanel LastChildFill="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" DockPanel.Dock="Top">
                    <!--Show Completed Course-->
                    <Border BorderThickness="0 3 0 3" BorderBrush="Black" Name="Show_Completed_Stack_Panel" DockPanel.Dock="Bottom" Visibility="Collapsed" MinHeight="150">
                        <ScrollViewer Background="{DynamicResource color4}">
                            <StackPanel>
                                <Border BorderThickness="2" BorderBrush="Black" Margin="2,5,4,2">
                                    <StackPanel Background="White">
                                        <TextBlock Text="Completed Course(s)" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Margin="3"/>
                                    </StackPanel>
                                </Border>
                                <Border Margin="5 10 5 0" BorderThickness="1" BorderBrush="Black" Background="White">
                                    <StackPanel>
                                        <TextBlock Text="ENGL 201 - Approaches to Literature" TextDecorations="Underline" FontWeight="Medium" Margin="3, 0" FontSize="14"/>
                                        <TextBlock TextWrapping="Wrap" Text="Requirement 2: Non-Commerce Courses (Junior English 3 units or 0.5 full course equivalent)" Margin="3, 0" FontSize="14"/>
                                        <TextBlock Margin="3, 0" Text="Completed date: Fall Block Week 2017" FontSize="14"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <ScrollViewer>
                        <StackPanel>
                            <Border BorderThickness="2" BorderBrush="Black" Margin="2,5,4,2">
                                <StackPanel  Background="#FFDADADA">
                                    <TextBlock Name="Regular_Degree_Title" Text="BComm | Major - Commerce" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Visibility="Visible" Margin="6" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" />
                                    <TextBlock Name="Conc_Degree_Title" Text="BComm | Major - Commerce | Concentration - Finance" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Visibility="Collapsed" Margin="6"/>
                                </StackPanel>
                            </Border>

                            <Expander Name="req1_expander" Margin="10 0"  Background="#FFDADADA">
                                <Expander.Header>
                                    <TextBlock Text="Requirement 1: Commerce Courses" FontWeight="Medium" FontSize="15" TextDecorations="Underline"/>
                                </Expander.Header>

                                <StackPanel>
                                    <Expander Margin="20 5 0 5" Name="req1_lower_expander">
                                        <Expander.Header>
                                            <TextBlock Text="Lower-Level Commerce Courses (200 and 300 level courses)" FontWeight="Medium" FontSize="15" TextDecorations="Underline"/>
                                        </Expander.Header>

                                        <StackPanel>
                                            <Border Margin="0 10 5 0" BorderThickness="1" BorderBrush="Black" Background="{StaticResource color6}" MouseDown="MGST217_MouseDown">
                                                <StackPanel>
                                                    <TextBlock Margin="3, 0" FontWeight="Medium" Text="MGST 217 - Introduction to Business Analytics" TextDecorations="Underline" FontSize="14"/>
                                                    <TextBlock Margin="3, 0" Text="Availability: Fall 2017 | Winter 2018" FontSize="14"/>
                                                    <TextBlock TextWrapping="Wrap" Margin="3, 0" Text="- Prerequisite: Admission to the Haskayne Bachelor of Commerce program." FontSize="14" FontStyle="Italic"/>
                                                    <TextBlock Margin="3, 0" TextWrapping="Wrap" Text="- Antirequisite: Credit for MGST217 and BSEN291 will not be allowed." FontSize="14" FontStyle="Italic"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Margin="0 10 5 0" BorderThickness="1" BorderBrush="Black" Background="{StaticResource color6}" MouseDown="SGMA217_MouseDown">
                                                <StackPanel>
                                                    <TextBlock Margin="3, 0" FontWeight="Medium" Text="SGMA 217 - Introduction to Business Skills" TextDecorations="Underline" FontSize="14"/>
                                                    <TextBlock Margin="3, 0" Text="Availability: Fall 2017 | Winter 2018" FontSize="14"/>
                                                    <TextBlock TextWrapping="Wrap" Margin="3, 0" Text="- Prerequisite: admission to the Haskayne Bachelor of Commerce program." FontSize="14" FontStyle="Italic"/>
                                                    <TextBlock Margin="3, 0" TextWrapping="Wrap" Text="- Antirequisite: credit for SGMA217 and BSEN291 will not be allowed." FontSize="14" FontStyle="Italic"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Margin="0 10 5 5" BorderThickness="1" BorderBrush="Black" Background="{StaticResource color5}" MouseDown="ACCT323_MouseDown">
                                                <StackPanel>
                                                    <TextBlock Margin="3, 0" FontWeight="Medium" Text="ACCT 323 - Introductory Managerial Accounting" TextDecorations="Underline" FontSize="14"/>
                                                    <TextBlock Margin="3, 0" Text="Availability: Fall 2017 | Winter 2018 | Spring 2018" FontSize="14"/>
                                                    <TextBlock TextWrapping="Wrap" Margin="3, 0" Text="- Prerequisite: Admission to the Haskayne Bachelor of Commerce program and Accounting 217 or 317." FontSize="14" FontStyle="Italic"/>
                                                    <TextBlock Margin="3, 0" TextWrapping="Wrap" Text="- Antirequisite: Credit for Accounting 323 and 301 will not be allowed." FontSize="14" FontStyle="Italic"/>
                                                </StackPanel>
                                            </Border>

                                        </StackPanel>
                                    </Expander>

                                    <Expander Margin="20 0 0 0" Name="req1_higher_expander">
                                        <Expander.Header>
                                            <TextBlock Text="Higher-Level Commerce Courses (400 and 500 level courses)" FontWeight="Medium" FontSize="15" TextDecorations="Underline"/>
                                        </Expander.Header>

                                        <StackPanel>
                                            <Border Margin="0 10 5 0" BorderThickness="1" BorderBrush="Black" Background="{StaticResource color5}" MouseDown="MGST451_MouseDown">
                                                <StackPanel>
                                                    <TextBlock Margin="3, 0" FontWeight="Medium" Text="MGST 451 - Corporate Governance and Ethical Decision-Making" TextDecorations="Underline" FontSize="14"/>
                                                    <TextBlock Margin="3, 0" Text="Availability: Fall 2017 | Winter 2018" FontSize="14"/>
                                                    <TextBlock TextWrapping="Wrap" Margin="3, 0" Text="- Prerequisite: Admission to the Haskayne Bachelor of Commerce program and and 54 units (9.0 full-course equivalents) including Finance 317." FontSize="14" FontStyle="Italic"/>
                                                    <TextBlock Margin="3, 0" TextWrapping="Wrap" Text="- Antirequisite: Credit for Management Studies 451 and any of Business and Environment 291, Management Studies 491, 493 or 495 will not be allowed." FontSize="14" FontStyle="Italic"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Margin="0 10 5 5" BorderThickness="1" BorderBrush="Black" Background="{StaticResource color5}" MouseDown="SMGA591_MouseDown">
                                                <StackPanel>
                                                    <TextBlock Margin="3, 0" FontWeight="Medium" Text="SGMA 591 - Strategic Management" TextDecorations="Underline" FontSize="14"/>
                                                    <TextBlock Margin="3, 0" Text="Availability: Fall 2017 | Winter 2018 | Spring 2018" FontSize="14"/>
                                                    <TextBlock TextWrapping="Wrap" Margin="3, 0" Text="- Prerequisite: Admission to the Haskayne Bachelor of Commerce program and and 84 units (14.0 full-course equivalents) including Accounting 217 or 317, Accounting 323, Business and Environment 395, Communications Studies 363 or 369 or Entrepreneurship and Innovation 317, Management Studies 391, Organizational Behaviour and Human Resources 317, Business Technology Management 317, Finance 317, Marketing 317, Operations Management 317." FontSize="14" FontStyle="Italic"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Expander>

                                </StackPanel>
                            </Expander>

                            <Expander Margin="10 5" Name="req2_expander"  Background="#FFDADADA">
                                <Expander.Header>
                                    <TextBlock Text="Requirement 2: Non-Commerce Courses" FontWeight="Medium" FontSize="15" TextDecorations="Underline"/>
                                </Expander.Header>

                                <StackPanel>
                                    <Border Margin="5 10 5 0" BorderThickness="1" BorderBrush="Black"  Background="{StaticResource color6}" MouseDown="ECON201_MouseDown">
                                        <StackPanel>
                                            <TextBlock Margin="3, 0" FontWeight="Medium" Text="ECON 201 - Principles of Microeconomic" TextDecorations="Underline" FontSize="14"/>
                                            <TextBlock Margin="3, 0" Text="Availability: Fall 2017 | Winter 2018 | Spring 2018 | Summer 2018" FontSize="14"/>
                                            <TextBlock Margin="3, 0" Text="- Prerequisite: None" FontSize="14" FontStyle="Italic"/>
                                            <TextBlock Margin="3, 0" Text="- Corequisite: None" FontSize="14" FontStyle="Italic"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Margin="5 10 5 5" BorderThickness="1" BorderBrush="Black" MouseDown="ECON203_MouseDown" Background="{StaticResource color5}">
                                        <StackPanel>
                                            <TextBlock Margin="3, 0" FontWeight="Medium" Text="ECON 203 - Principles of Macroeconomic" TextDecorations="Underline" FontSize="14"/>
                                            <TextBlock Margin="3, 0" Text="Availability: Fall 2017 | Winter 2018 | Spring 2018 | Summer 2018" FontSize="14"/>
                                            <TextBlock Margin="3, 0" Text="- Prerequisite: Economics 201" FontSize="14" FontStyle="Italic"/>
                                            <TextBlock Margin="3, 0" Text="- Corequisite: Economics 201" FontSize="14" FontStyle="Italic"/>
                                        </StackPanel>
                                    </Border>

                                </StackPanel>
                            </Expander>

                            <Expander Name="req3_expander" Margin="10 0" Background="#FFDADADA">
                                <Expander.Header>
                                    <TextBlock Text="Requirement 3: Option Courses" FontWeight="Medium" FontSize="15" TextDecorations="Underline"/>
                                </Expander.Header>

                                <StackPanel>
                                    <Border Margin="5 10 5 0" BorderThickness="1" BorderBrush="Black" Background="{StaticResource color7}" MouseDown="Option_Search_MouseDown">
                                        <StackPanel>
                                            <TextBlock Margin="3, 0" FontWeight="Medium" Text="Junior Humanities or Fine Arts Option" TextDecorations="Underline" FontSize="14"/>
                                            <TextBlock Margin="3, 0" Text="- (3 units or 0.5 full-course equivalent)" FontSize="14" FontStyle="Italic"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Margin="5 10 5 0" BorderThickness="1" BorderBrush="Black" Background="{StaticResource color7}" MouseDown="Option_Search_MouseDown">
                                        <StackPanel>
                                            <TextBlock Margin="3, 0" FontWeight="Medium" Text="Junior Science Option" TextDecorations="Underline" FontSize="14"/>
                                            <TextBlock Margin="3, 0" Text="- (3 units or 0.5 full-course equivalent)" FontSize="14" FontStyle="Italic"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Margin="5 10 5 5" BorderThickness="1" BorderBrush="Black" Background="{StaticResource color7}" MouseDown="Option_Search_MouseDown">
                                        <StackPanel>
                                            <TextBlock Margin="3, 0" FontWeight="Medium" Text="Senior Humanities, Social Sciences, Science or Fine Arts Option" TextDecorations="Underline" FontSize="14"/>
                                            <TextBlock Margin="3, 0" Text="- (6 units or 1.0 full-course equivalent)" FontSize="14" FontStyle="Italic"/>
                                        </StackPanel>
                                    </Border>

                                </StackPanel>
                            </Expander>

                            <Expander Margin="10 5" Name="FNCE_Conc" Visibility="Collapsed" Background="#FFDADADA">
                                <Expander.Header>
                                    <Grid Width="{Binding ElementName=FNCE_Conc, Path=ActualWidth}">
                                        <TextBlock Text="Requirement 4: Concentration - Finance (FNCE) " FontWeight="Medium" HorizontalAlignment="Left" FontSize="15" TextDecorations="Underline"/>
                                        <Button Content="Remove" HorizontalAlignment="Right" Width="70px" Margin="0, 0, 40, 0" FontSize="14" FontWeight="Medium" BorderBrush="Black" Click="Remove_FNCE_Conc_Click" Background="#FF595959" Foreground="White"/>
                                    </Grid>
                                </Expander.Header>

                                <StackPanel>
                                    <Border Margin="5 10 5 0" BorderThickness="1" BorderBrush="Black" Background="{StaticResource color5}" MouseDown="FNCE451_MouseDown">
                                        <StackPanel>
                                            <TextBlock Margin="3, 0" FontWeight="Medium" Text="FNCE 451 - Advanced Financial Management" TextDecorations="Underline" FontSize="14"/>
                                            <TextBlock Margin="3, 0" Text="Availability: Fall 2017 | Winter 2018" FontSize="14"/>
                                            <TextBlock Margin="3, 0" Text="- Prerequisite: Admission to the Haskayne School of Business and Finance 317" FontSize="14" FontStyle="Italic"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Margin="5 10 5 0" BorderThickness="1" BorderBrush="Black" Background="{StaticResource color7}" MouseDown="Option_Search_MouseDown">
                                        <StackPanel>
                                            <TextBlock Margin="3, 0" FontWeight="Medium" Text="2 full-course equivalents from the Field of Finance" TextDecorations="Underline" FontSize="14"/>
                                            <TextBlock Margin="3, 0" Text="Restrictions:" FontSize="14"/>
                                            <TextBlock Margin="5, 0" Text="- Must be 400 or 500 level" FontSize="14" FontStyle="Italic"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Margin="5 10 5 5" BorderThickness="1" BorderBrush="Black" Background="{StaticResource color7}" MouseDown="Option_Search_MouseDown">
                                        <StackPanel>
                                            <TextBlock Margin="3, 0" FontWeight="Medium" Text="One of the following 300-level courses from the Field of Economics" TextDecorations="Underline" FontSize="14"/>
                                            <TextBlock Margin="3, 0" Text="- Economics 301: Intermediate Economic Theory - Microeconomics I" FontSize="14" FontStyle="Italic"/>
                                            <TextBlock Margin="3, 0" Text="- Economics 303: Intermediate Economic Theory - Macroeconomics I" FontSize="14" FontStyle="Italic"/>
                                            <TextBlock Margin="3, 0" Text="- Economics 341: Money and Banking" FontSize="14" FontStyle="Italic"/>
                                            <TextBlock Margin="3, 0" Text="- Economics 373: Game Theory and Strategic Thinking for the Social Sciences" FontSize="14" FontStyle="Italic"/>
                                            <TextBlock Margin="3, 0" Text="- Economics 387: Introduction to Mathematical Economics I" FontSize="14" FontStyle="Italic"/>
                                            <TextBlock Margin="3, 0" Text="- Economics 395: Use of Statistics in Economics" FontSize="14" FontStyle="Italic"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Expander>

                            <!-- Hidden CPSC degree and SENG concentration -->
                            <Border BorderThickness="2" BorderBrush="Black" Background="#FFFFECDD" Margin="2,10,4,2" Name="Degree_CPSC" Visibility="Collapsed">
                                <Grid Width="{Binding ElementName=Degree_CPSC, Path=ActualWidth}">
                                    <TextBlock Text="BSc | Major - Computer Science" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Name="CPSCdegree_Regular" Visibility="Visible" Margin="6"/>
                                    <TextBlock Text="BSc | Major - Computer Science | Concentration - Software Engineering" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold" Name="CPSCdegree_Conc" Visibility="Collapsed" Margin="25 6 0 6"/>
                                    <Button Content="Remove All" HorizontalAlignment="Right" Width="85px" Height="25px" Margin="0, 0, 10, 0" FontWeight="Medium" FontSize="15" BorderBrush="Black" Click="Remove_CPSC_Degree_Click" Background="#FF595959" Foreground="White"/>
                                </Grid>
                            </Border>

                            <Expander Visibility="{Binding ElementName=Degree_CPSC, Path=Visibility}" Name="req1CPSC_expander" Background="#FFFFECDD" Margin="10 0">
                                <Expander.Header>
                                    <TextBlock Text="Requirement 1: Computer Science Courses" FontWeight="Medium" FontSize="15" TextDecorations="Underline"/>
                                </Expander.Header>

                                <StackPanel>
                                    <Expander Margin="20 5 0 5" Name="req1CPSC_lower_expander">
                                        <Expander.Header>
                                            <TextBlock Text="Lower-Level Computer Science Courses (200 and 300 level courses)" FontWeight="Medium" FontSize="15"/>
                                        </Expander.Header>

                                        <StackPanel>
                                            <Border Margin="0 10 5 0" BorderThickness="1" BorderBrush="Black" Background="{StaticResource color6}" MouseDown="CPSC231_MouseDown">
                                                <StackPanel>
                                                    <TextBlock Margin="3, 0" FontWeight="Medium" Text="CSPC 231 - Introduction to Computer Science for Computer Science Majors I" TextDecorations="Underline" FontSize="14"/>
                                                    <TextBlock Margin="3, 0" Text="Availability: Fall 2017 | Winter 2018 | Spring 2018" FontSize="14"/>
                                                    <TextBlock TextWrapping="Wrap" Margin="3, 0" Text="- Antirequisite: Credit for Computer Science 231 and any of 215, 217, 235, Computer Engineering 339 or Engineering 233 will not be allowed." FontSize="14" FontStyle="Italic"/>
                                                    <TextBlock Margin="3, 0" TextWrapping="Wrap" Text="- Note: Computer Science 101 is strongly recommended as preparation for this course." FontSize="14" FontStyle="Italic"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Margin="0 10 5 5" BorderThickness="1" BorderBrush="Black" Background="{StaticResource color5}" MouseDown="CPSC313_MouseDown">
                                                <StackPanel>
                                                    <TextBlock Margin="3, 0" FontWeight="Medium" Text="CPSC 313 - Introduction to Computability" TextDecorations="Underline" FontSize="14"/>
                                                    <TextBlock Margin="3, 0" Text="Availability: Fall 2017 | Winter 2018 | Spring 2018" FontSize="14"/>
                                                    <TextBlock TextWrapping="Wrap" Margin="3, 0" Text="- Prerequisite: Mathematics 271 or 273; Philosophy 279 or 377; and one of Computer Science 219, 233 or 235." FontSize="14" FontStyle="Italic"/>
                                                    <TextBlock Margin="3, 0" TextWrapping="Wrap" Text="- Note: One of Computer Science 319 or 331 is strongly recommended as preparation for this course." FontSize="14" FontStyle="Italic"/>
                                                </StackPanel>
                                            </Border>

                                        </StackPanel>
                                    </Expander>

                                    <Expander Margin="20 0 0 0" Name="req1CPSC_higher_expander">
                                        <Expander.Header>
                                            <TextBlock Text="Higher-Level Computer Science Courses (400 and 500 level courses)" FontWeight="Medium" FontSize="15"/>
                                        </Expander.Header>

                                        <StackPanel>
                                            <Border Margin="0 10 5 0" BorderThickness="1" BorderBrush="Black" Background="{StaticResource color5}" MouseDown="CPSC413_MouseDown">
                                                <StackPanel>
                                                    <TextBlock Margin="3, 0" FontWeight="Medium" Text="CPSC 413 - Design and Analysis of Algorithms I" TextDecorations="Underline" FontSize="14"/>
                                                    <TextBlock Margin="3, 0" Text="Availability: Fall 2017 | Winter 2018" FontSize="14"/>
                                                    <TextBlock TextWrapping="Wrap" Margin="3, 0" Text="- Prerequisite: Computer Science 313; and either Computer Science 331 or both Computer Science 319 and 105; and Mathematics 211 or 213; and one of Mathematics 249, 251, 265, 275, 281 or Applied Mathematics 217." FontSize="14" FontStyle="Italic"/>
                                                    <TextBlock Margin="3, 0" TextWrapping="Wrap" Text="- Notes: One of Mathematics 265 or 275 is highly recommended as preparation for this course, but not mandatory. Students who have completed Computer Science 319 instead of Computer Science 331, and who have been unable to complete Computer Science 105, should contact the Department of Computer Science for information about how to be prepared for, and how to be eligible to take, Computer Science 413." FontSize="14" FontStyle="Italic"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Margin="0 10 5 5" BorderThickness="1" BorderBrush="Black" Background="{StaticResource color7}" MouseDown="Option_Search_MouseDown">
                                                <StackPanel>
                                                    <TextBlock Margin="3, 0" FontWeight="Medium" Text="1.5 full-course equivalents from the Field of Computer Science" TextDecorations="Underline" FontSize="14"/>
                                                    <TextBlock TextWrapping="Wrap" Margin="3, 0" Text="Restriction:" FontSize="14"/>
                                                    <TextBlock TextWrapping="Wrap" Margin="3, 0" Text="- Courses must be numbered 500 or above" FontSize="14" FontStyle="Italic"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Expander>

                                </StackPanel>
                            </Expander>

                            <Expander Margin="10 5" Name="req2CPSC_expander" Visibility="{Binding ElementName=Degree_CPSC, Path=Visibility}" Background="#FFFFECDD">
                                <Expander.Header>
                                    <TextBlock Text="Requirement 2: Non-Computer Science Courses" FontWeight="Medium" FontSize="15" TextDecorations="Underline"/>
                                </Expander.Header>

                                <StackPanel>
                                    <Border Margin="5 10 5 5" BorderThickness="1" BorderBrush="Black"  Background="{StaticResource color6}" MouseDown="PHIL279_MouseDown">
                                        <StackPanel>
                                            <TextBlock Margin="3, 0" FontWeight="Medium" Text="PHIL 279 - Logic I" TextDecorations="Underline" FontSize="14"/>
                                            <TextBlock Margin="3, 0" Text="Availability: Fall 2017 | Winter 2018" FontSize="14"/>
                                            <TextBlock Margin="3, 0" Text="- Antirequisite: Credit for Philosophy 279 and 377 will not be allowed." FontSize="14" FontStyle="Italic"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Expander>

                            <Expander Name="req3CPSC_expander" Visibility="{Binding ElementName=Degree_CPSC, Path=Visibility}" Background="#FFFFECDD" Margin="10 0">
                                <Expander.Header>
                                    <TextBlock Text="Requirement 3: Option Courses" FontWeight="Medium" FontSize="15" TextDecorations="Underline"/>
                                </Expander.Header>

                                <StackPanel>
                                    <Border Margin="5 10 5 5" BorderThickness="1" BorderBrush="Black"  Background="{StaticResource color7}" MouseDown="Option_Search_MouseDown">
                                        <StackPanel>
                                            <TextBlock Margin="3, 0" FontWeight="Medium" Text="6 full-course equivalents Non-CPSC Course Requirements" TextDecorations="Underline" FontSize="14"/>
                                            <TextBlock Margin="3, 0" Text="Restriction:" FontSize="14"/>
                                            <TextBlock Margin="3, 0" Text="- Option courses must not be in the field of Computer Science" FontSize="14" FontStyle="Italic"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Expander>

                            <Expander Margin="10 5" Name="SoftEng_Conc" Visibility="Collapsed" Background="#FFFFECDD">
